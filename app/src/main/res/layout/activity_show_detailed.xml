<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground"
    tools:context="informatica.groep1.bioscoopapp.presentation.ShowDetailedActivity">

    <ImageView
        android:id="@+id/showDetailedActivity_IV_posterImage"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toTopOf="@+id/showDetailedActivity_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/showDetailedActivity_IV_headerImage"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@color/colorWhite" />

    <ImageView
        android:id="@+id/showDetailedActivity_IV_headerImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.NoActionBar" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="134dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="134dp"
        android:text="2016"
        android:textColor="@color/colorWhiteSecondary"
        android:textSize="12sp"
        app:fontFamily="roboto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:textAllCaps="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_IV_headerImage" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="134dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="134dp"
        android:text="assassin's creed"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:fontFamily="roboto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_TV_date"
        app:textAllCaps="true"
        app:textWeight="medium" />

    <LinearLayout
        android:id="@+id/showDetailedActivity_subinfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="134dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="134dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_TV_title">

        <ImageView
            android:id="@+id/showDetailedActivity_IV_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            app:srcCompat="@drawable/ic_star_white_18dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/showDetailedActivity_TV_rating"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="8.9"
            android:textColor="@color/colorWhiteSecondary"
            android:textSize="12sp"
            app:fontFamily="roboto"
            app:textAllCaps="true" />

        <ImageView
            android:id="@+id/showDetailedActivity_IV_adultAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="false"
            android:alpha="0.6"
            app:srcCompat="@drawable/ic_account_star_white_18dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/showDetailedActivity_TV_adultAge"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="18+"
            android:textColor="@color/colorWhiteSecondary"
            android:textSize="12sp"
            app:fontFamily="roboto"
            app:textAllCaps="true" />

        <ImageView
            android:id="@+id/showDetailedActivity_IV_movieLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:alpha="0.6"
            app:srcCompat="@drawable/ic_clock_white_18dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/showDetailedActivity_TV_movieLength"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:text="1h 22m"
            android:textColor="@color/colorWhiteSecondary"
            android:textSize="12sp"
            app:fontFamily="roboto" />
    </LinearLayout>

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/showDetailedActivity_BTN_moreInfo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="8dp"
        android:elevation="1dp"
        android:paddingBottom="6dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="6dp"
        android:text="more information"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_subinfoContainer" />

    <View
        android:id="@+id/showDetailedActivity_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhiteDisabled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_BTN_moreInfo" />

    <ImageView
        android:id="@+id/showDetailedActivity_IV_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_divider"
        app:srcCompat="@drawable/ic_clock_white_24dp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_time"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toRightOf="@+id/showDetailedActivity_IV_time"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_divider" />

    <ImageView
        android:id="@+id/showDetailedActivity_IV_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_IV_time"
        app:srcCompat="@drawable/ic_calendar_blank_white_24dp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_playdate"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toRightOf="@+id/showDetailedActivity_IV_date"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_TV_time" />

    <ImageView
        android:id="@+id/showDetailedActivity_IV_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_IV_date"
        app:srcCompat="@drawable/ic_language_white_24dp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_language"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="English"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toRightOf="@+id/showDetailedActivity_IV_language"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_TV_playdate" />

    <ImageView
        android:id="@+id/showDetailedActivity_IV_subtitles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_IV_language"
        app:srcCompat="@drawable/ic_subtitles_white_24dp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_subtitles"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="Dutch"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toRightOf="@+id/showDetailedActivity_IV_subtitles"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_TV_language" />

    <ImageView
        android:id="@+id/showDetailedActivity_IV_addons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_IV_subtitles"
        app:srcCompat="@drawable/ic_plus_circle_outline_white_24dp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/showDetailedActivity_TV_addons"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toRightOf="@+id/showDetailedActivity_IV_addons"
        app:layout_constraintTop_toBottomOf="@+id/showDetailedActivity_TV_subtitles" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/showDetailedActivity_FAB_buyTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="auto"
        app:srcCompat="@drawable/ic_ticket_white_24dp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

</android.support.constraint.ConstraintLayout>

