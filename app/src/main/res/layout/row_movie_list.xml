<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:background="@color/colorBackground">


    <ImageView
        android:id="@+id/rowMovie_iv_background"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/rowMovie_iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_star_white_24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rowMovie_iv_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/rowMovie_tv_releaseYear"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rowMovie_iv_star"
        app:layout_constraintTop_toBottomOf="@+id/rowMovie_iv_background"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/rowMovie_iv_calendar"
        android:layout_marginRight="8dp"
        app:fontFamily="roboto"
        app:textWeight="normal"
        android:textColor="@color/colorWhite"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/rowMovie_tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="8.9"
        app:fontFamily="roboto"
        app:textWeight="normal"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/rowMovie_iv_star"
        app:layout_constraintTop_toBottomOf="@+id/rowMovie_iv_background"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/rowMovie_iv_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowMovie_iv_background"
        app:srcCompat="@drawable/ic_calendar_blank_white_24dp"
        app:layout_constraintLeft_toRightOf="@+id/rowMovie_tv_rating" />

    <ImageButton
        android:id="@+id/rowMovie_ib_bookmark"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowMovie_iv_background"
        app:srcCompat="@drawable/ic_bookmark_outline_white_24dp" />

    <ImageButton
        android:id="@+id/rowMovie_ib_heart"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rowMovie_iv_background"
        app:srcCompat="@drawable/ic_heart_outline_white_24dp"
        app:layout_constraintRight_toLeftOf="@+id/rowMovie_ib_bookmark" />

</android.support.constraint.ConstraintLayout>