<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="informatica.groep1.bioscoopapp.presentation.AppActivity"
    tools:showIn="@layout/activity_app">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Auteurs"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:textAllCaps="true"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_IV_teamGemak" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_Twan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="2113135"
        android:textColor="@color/colorWhiteSecondary"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:fontFamily="roboto"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Twan Maastricht"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_Thimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="2111406"
        android:textColor="@color/colorWhiteSecondary"
        android:textSize="12sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Thimo Koolen"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Twan" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_Sven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Sven Westerlaken"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_credit" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="2110540"
        android:textColor="@color/colorWhiteSecondary"
        android:textSize="12sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Sven" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_Luka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="2096156"
        android:textColor="@color/colorWhiteSecondary"
        android:textSize="12sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Luka Brinkman"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Thimo" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_Devon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Devon Marsham"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Luka" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="0dp"
        android:text="2113293"
        android:textColor="@color/colorWhiteSecondary"
        android:textSize="12sp"
        app:fontFamily="roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Devon" />

    <ImageView
        android:id="@+id/activityApp_IV_teamGemak"
        android:layout_width="0dp"
        android:layout_height="235dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teamfoto" />

    <ImageView
        android:id="@+id/activityApp_IV_tmdbLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/tmdb"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailedActivity_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <View
        android:id="@+id/movieDetailedActivity_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhiteDisabled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/activityApp_TV_tmdbText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:fontFamily="roboto"
        android:text="This product uses the TMDb API but is not endorsed or certified by TMDb."
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toRightOf="@+id/activityApp_IV_tmdbLogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityApp_IV_tmdbLogo"
        app:layout_constraintBottom_toBottomOf="@+id/activityApp_IV_tmdbLogo"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
</ScrollView>