<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="informatica.groep1.bioscoopapp.presentation.AppActivity"
    tools:showIn="@layout/activity_app">

    <TextView
        android:id="@+id/activityApp_TV_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="32dp"
        android:text="Auteurs van de app :"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_IV_teamGemak" />

    <TextView
        android:id="@+id/activityApp_TV_Twan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="13dp"
        android:text="Twan Maastricht 2113135"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Sven" />

    <TextView
        android:id="@+id/activityApp_TV_Thimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="13dp"
        android:text="Thimo Koolen 2111406"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Twan" />

    <TextView
        android:id="@+id/activityApp_TV_Sven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="14dp"
        android:text="Sven Westerlaken 2110540"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_credit" />

    <TextView
        android:id="@+id/activityApp_TV_Luka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="107dp"
        android:layout_marginTop="12dp"
        android:text="Luka Brinkman 2096156"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Thimo" />

    <TextView
        android:id="@+id/activityApp_TV_Devon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="20dp"
        android:text="Devon Marsham 2113293"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Luka" />

    <ImageView
        android:id="@+id/activityApp_IV_teamGemak"
        android:layout_width="306dp"
        android:layout_height="235dp"
        app:srcCompat="@drawable/teambiosgemak"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/activityApp_IV_tmdbLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/activityApp_IV_teamGemak"
        app:layout_constraintTop_toBottomOf="@+id/activityApp_TV_Devon"
        app:srcCompat="@drawable/tmdb"/>

    <TextView
        android:id="@+id/activityApp_TV_tmdbText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="This product uses the TMDb API but is not endorsed or certified by TMDb."
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toRightOf="@+id/activityApp_IV_tmdbLogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activityApp_IV_tmdbLogo"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>