<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="informatica.groep1.bioscoopapp.presentation.SettingsActivity"
    tools:showIn="@layout/activity_settings">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/settingsActivity_L_languageSetting"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <ImageView
            android:id="@+id/settingsActivity_IV_languageIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/settingsActivity_L_languageSetting"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_language_white_24dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/settingsActivity_TV_languageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/language"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:fontFamily="roboto"
            app:layout_constraintLeft_toRightOf="@+id/settingsActivity_IV_languageIcon"
            app:layout_constraintTop_toTopOf="@+id/settingsActivity_L_languageSetting" />

        <TextView
            android:id="@+id/settingsActivity_TV_languageSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:text="Test"
            android:textColor="@color/colorWhiteSecondary"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/settingsActivity_IV_languageIcon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/settingsActivity_L_accountSetting"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsActivity_L_languageSetting">

        <ImageView
            android:id="@+id/settingsActivity_IV_accountIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/settingsActivity_L_accountSetting"
            app:srcCompat="@drawable/ic_account_white_24dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/settingsActivity_TV_accountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Account"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:fontFamily="roboto"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@+id/settingsActivity_IV_accountIcon"
            android:layout_marginLeft="32dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
