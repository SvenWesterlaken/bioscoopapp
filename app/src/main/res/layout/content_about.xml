<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="informatica.groep1.bioscoopapp.presentation.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ImageView
        android:id="@+id/activityAbout_IV_appIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityAbout_IV_biosIcon"
        app:srcCompat="@drawable/ic_cellphone_white_24dp" />

    <ImageView
        android:id="@+id/activityAbout_IV_biosIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_movie_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/activityAbout_TV_Bioscoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-8dp"
        android:text="Bioscoop"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/activityAbout_IV_biosIcon"
        app:layout_constraintTop_toTopOf="@+id/activityAbout_IV_biosIcon" />

    <TextView
        android:id="@+id/activityAbout_TV_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="App"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/activityAbout_IV_appIcon"
        app:layout_constraintLeft_toRightOf="@+id/activityAbout_IV_appIcon"
        android:layout_marginLeft="30dp" />
</android.support.constraint.ConstraintLayout>
